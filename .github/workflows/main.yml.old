name: Run Unit and Integration Tests

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  Jest:
    runs-on: ubuntu-latest
    env:
      GITHUB_TOKEN: ${{ github.token }}
      YARN_TOKEN: ${{ secrets.YARN_TOKEN }}
    steps:
      - uses: actions/checkout@v1
      - uses: actions/setup-node@v2
        with:
          node-version: "14"
      - name: Install Yarn
        run: npm install -g yarn
      - name: Install dependencies
        run: yarn
      - name: Create .env file
        run: |
          touch .env
          echo MEXIT_BACKEND_WORKSPACE_ID=${{ secrets.MEXIT_BACKEND_WORKSPACE_ID }} >> .env
          echo MEXIT_BACKEND_REFRESH_TOKEN=${{ secrets.MEXIT_BACKEND_REFRESH_TOKEN }} >> .env
          echo MEXIT_BACKEND_CLIENT_ID=${{ secrets.MEXIT_BACKEND_CLIENT_ID }} >> .env
      - name: Run Tests
        run: yarn test
        env:
          AWS_ACCESS_KEY_ID: ${{ secrets.AWS_ACCESS_KEY_ID }}
          AWS_SECRET_ACCESS_KEY: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
